# Netrek Environment Configuration Template
# Copy this file to .env or set these variables in your deployment environment

# Network Configuration
# Server address for binding (server) or connecting (client)
NETREK_SERVER_ADDR=localhost

# Server port (must be between 1024-65535)
NETREK_SERVER_PORT=4566

# Maximum number of concurrent clients
NETREK_MAX_CLIENTS=32

# Network timeout settings
NETREK_READ_TIMEOUT=30s
NETREK_WRITE_TIMEOUT=30s

# Game update frequency (1-100 Hz)
NETREK_UPDATE_RATE=20

# Number of ticks between full state updates (1-10)
NETREK_TICKS_PER_STATE=3

# Use partial state updates for better performance
NETREK_USE_PARTIAL_STATE=true

# Game world size (1000.0-100000.0)
NETREK_WORLD_SIZE=10000.0

# Example Production Configuration:
# NETREK_SERVER_ADDR=0.0.0.0
# NETREK_SERVER_PORT=8080
# NETREK_MAX_CLIENTS=100
# NETREK_READ_TIMEOUT=15s
# NETREK_WRITE_TIMEOUT=15s
# NETREK_UPDATE_RATE=30
# NETREK_WORLD_SIZE=15000.0

